---
import CardLaunch from "./CardLaunch.astro"

    const res = await fetch('https://api.spacexdata.com/v5/launches/query', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({
            query:{},
            options:{
                sort: {
                    data_unix: 'asc'
                },
                limit: 12
            },
        })
    })
    const data = await res.json()
    const launches = data.docs 
---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
    {
        launches.map((launche) =>
            <CardLaunch 
                id={launche.id}
                img={launche.links.patch.small}
                details={launche.details}
                flightNumber={launche.flight_number}
                success={launche.success}
            />
            )
    }
</div>